<div class="visible-lg visible-md m-t-10">
    <div class="pull-left p-r-10 p-t-10 fs-16 font-heading">
        <span class="text-master">{{ adminUsername }}</span>
    </div>
    <div class="dropdown pull-right">
        <button class="profile-dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="thumbnail-wrapper d32 circular inline m-t-5">
                    {% if adminImage is not empty %}
                    <img src="{{ publicUrl(adminImage) }}" alt="" data-src="{{ publicUrl(adminImage) }}" data-src-retina="{{ publicUrl(adminImage) }}" width="32" height="32">
                    {% else %}
                        <i class="fa fa-user"></i>
                    {% endif %}
                </span>
        </button>
        <ul class="dropdown-menu profile-dropdown" role="menu">
            <li><a href="{{ baseUrl("admin/admins/edit", {id: admin.id}) }}"><i class="pg-settings_small"></i> {{ "Edit Profile"|trans }}</a>
            {#<li><a href="{{ baseUrl("", {method: "index"}) }}"><i class="pg-settings_small"></i> {{ "My Settings"|trans }}</a>#}
            </li>
            <li class="bg-master-lighter">
                <a href="{{ baseUrl("admin/admins/logout") }}" class="clearfix">
                <span class="pull-left">Logout</span>
                <span class="pull-right"><i class="pg-power"></i></span>
                </a>
            </li>
        </ul>
    </div>
</div>